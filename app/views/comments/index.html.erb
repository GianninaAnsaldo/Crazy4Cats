<p style="color: green"><%= notice %></p>

<% content_for :title, "Comments" %>

<h1>Comments</h1>

<div class="row">
  <% @comments.each do |comment| %>
  <div class="card my-2">
      <div class="card-body">
        <h5 class="card-title">
          <% if comment.user.present? %>
            <%= comment.user.name %>
          <% else %>
            An√≥nimo
          <% end %>
        </h5>
        <p class="card-text"><%= truncate(comment.content, length: 100) %></p> 
        <%= link_to "Ver este post", comment_path(comment), class: "btn btn-primary btn-sm" %>
      </div>
  </div>
  <% end %>
</div>

<%= link_to "Nuevo Comentario", new_comment_path %>
